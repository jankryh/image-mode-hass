# Home Assistant Container Configuration
# Copy this file to .env and modify as needed

# Timezone configuration
TIMEZONE=Europe/Prague

# User configuration
HASS_USER=hass
HASS_UID=1000
HASS_GID=1000

# Directory paths (relative to project root)
HASS_CONFIG_DIR=./config
HASS_BACKUP_DIR=./backups
HASS_SECRETS_DIR=./secrets
LOG_DIR=./logs
SSL_CERT_DIR=./ssl
SSH_KEYS_DIR=./ssh

# Network configuration
NETWORK_INTERFACE=eth0
NETWORK_MODE=bridge

# Security settings
SSH_PORT=22
HASS_PORT=8123
ENABLE_SSL=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# Performance settings
MEMORY_LIMIT=2g
CPU_LIMIT=2.0
DISK_LIMIT=10g

# Backup settings
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false

# Monitoring settings
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Logging settings
LOG_LEVEL=INFO
LOG_ROTATION_DAYS=7
LOG_COMPRESSION=true

# SELinux settings
SELINUX_MODE=enforcing
SELINUX_TYPE=container_t

# Firewall settings
FIREWALL_DEFAULT_ZONE=public
ALLOW_SSH=true
ALLOW_HASS_API=true

# Fail2ban settings
FAIL2BAN_ENABLED=true
FAIL2BAN_MAX_RETRY=3
FAIL2BAN_BAN_TIME=3600
FAIL2BAN_FIND_TIME=600
